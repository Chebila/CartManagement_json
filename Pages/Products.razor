@page "/products"
@using ECommerceApp.Models
@inject NavigationManager Navigation
@inject ECommerceApp.ViewModels.ProductViewModel ProductVM

<h3 class="mb-3">Products</h3>

<div class="card mb-4">
    <div class="card-body">
        <h4 class="card-title mb-3">Add new product</h4>
        <EditForm Model="@ProductVM.NewProduct" OnValidSubmit="OnAddProduct">
            <div class="mb-3">
                <InputText class="form-control" @bind-Value="ProductVM.NewProduct.Name" placeholder="Name" />
            </div>
            <div class="mb-3">
                <InputTextArea class="form-control" @bind-Value="ProductVM.NewProduct.Description" placeholder="Description" />
            </div>
            <div class="mb-3">
                <InputNumber class="form-control" @bind-Value="ProductVM.NewProduct.Price" placeholder="Price" />
            </div>
            <div class="mb-3">
                <InputFile OnChange="OnNewImageSelected" accept="image/*" />
                @if (!string.IsNullOrEmpty(_newImagePreview))
                {
                    <img src="@_newImagePreview" style="height:100px;margin-top:0.5rem" />
                }
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </EditForm>
    </div>
</div>

@if (ProductVM.Products == null)
{
    <p>Loading...</p>
}
else
{
    @if (!string.IsNullOrEmpty(ProductVM.ErrorMessage))
    {
        <div class="alert alert-danger">@ProductVM.ErrorMessage</div>
    }
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var p in ProductVM.Products)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(p.ImageUrl))
                    {
                        <img src="@p.ImageUrl" class="card-img-top product-img" alt="@p.Name" style="object-fit:contain; height:200px;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height:200px">
                            <span class="text-secondary">No Image</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text text-truncate">@p.Description</p>
                        <span class="fw-bold text-success mb-2">@p.Price.ToString("C")</span>
                        <div class="mt-auto">
                            <button class="btn btn-success btn-sm me-1" @onclick="() => OnAddToCartAndRedirect(p.Id)">Add to cart</button>
                            <button class="btn btn-warning btn-sm me-1" @onclick="() => OnStartEdit(p.Id)">Edit</button>
                            <button class="btn btn-danger btn-sm" @onclick="() => OnDelete(p.Id)">Delete</button>
                        </div>
                        @if (ProductVM.EditingProduct?.Id == p.Id)
                        {
                            <EditForm Model="@ProductVM.EditingProduct" OnValidSubmit="OnSaveEdit">
                                <div class="mb-2">
                                    <InputText class="form-control mb-1" @bind-Value="ProductVM.EditingProduct.Name" placeholder="Name" />
                                    <InputTextArea class="form-control mb-1" @bind-Value="ProductVM.EditingProduct.Description" placeholder="Description" />
                                    <InputNumber class="form-control mb-1" @bind-Value="ProductVM.EditingProduct.Price" placeholder="Price" />
                                    <InputFile OnChange="(e) => OnEditImageSelected(e, p.Id)" accept="image/*" />
                                    @if (ProductVM.EditingProduct.ImageUrl is not null)
                                    {
                                        <img src="@ProductVM.EditingProduct.ImageUrl" style="height:80px;margin-top:0.5rem" />
                                    }
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm me-2">Save</button>
                                <button type="button" class="btn btn-secondary btn-sm" @onclick="OnCancelEdit">Cancel</button>
                            </EditForm>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private IBrowserFile? _newImageFile;
    private string? _newImagePreview;

    private async Task OnNewImageSelected(InputFileChangeEventArgs e)
    {
        _newImageFile = e.File;

        //Preview for UI
        using var stream = _newImageFile.OpenReadStream(1024 * 1024 * 2); //limit 2MB
        var buffer = new byte[_newImageFile.Size];
        await stream.ReadAsync(buffer, 0, (int)_newImageFile.Size);
        var base64 = Convert.ToBase64String(buffer);
        _newImagePreview = $"data:{_newImageFile.ContentType};base64,{base64}";
    }

    private async Task OnAddProduct()
    {
        if (_newImageFile != null)
        {
            var imagesDir = Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images");
            Directory.CreateDirectory(imagesDir);
            var uniqueName = $"{Guid.NewGuid()}{Path.GetExtension(_newImageFile.Name)}";
            var filePath = Path.Combine(imagesDir, uniqueName);
            using (var fs = new FileStream(filePath, FileMode.Create))
            {
                await _newImageFile.OpenReadStream(1024 * 1024 * 2).CopyToAsync(fs); // limit 2MB
            }
            ProductVM.NewProduct.ImageUrl = $"/images/{uniqueName}";
        }
        else
        {
            ProductVM.NewProduct.ImageUrl = null;
        }
        ProductVM.AddProduct();
        _newImageFile = null;
        _newImagePreview = null;
    }

    private async Task OnEditImageSelected(InputFileChangeEventArgs e, string productId)
    {
        var file = e.File;
        var imagesDir = Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images");
        Directory.CreateDirectory(imagesDir);
        var uniqueName = $"{Guid.NewGuid()}{Path.GetExtension(file.Name)}";
        var filePath = Path.Combine(imagesDir, uniqueName);

        using (var fs = new FileStream(filePath, FileMode.Create))
        {
            await file.OpenReadStream(1024 * 1024 * 2).CopyToAsync(fs); // same 2MB limit
        }

        if (ProductVM.EditingProduct != null)
            ProductVM.EditingProduct.ImageUrl = $"/images/{uniqueName}";
    }

    protected override void OnInitialized()
    {
        ProductVM.LoadProducts();
    }

    void OnStartEdit(string id)
    {
        ProductVM.StartEdit(id);
    }

    void OnSaveEdit()
    {
        ProductVM.SaveEdit();
    }

    void OnCancelEdit()
    {
        ProductVM.CancelEdit();
    }

    void OnDelete(string id)
    {
        ProductVM.Delete(id);
    }

    void OnAddToCartAndRedirect(string productId)
    {
        ProductVM.AddToCart(productId);
        Navigation.NavigateTo("/cart");
    }
}